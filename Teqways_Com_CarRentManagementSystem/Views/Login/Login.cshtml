<script>
    $("#LoginBtn").click(function () {
        $(".preloader").fadeIn();
        $.ajax({
            url: "/Login/LoginUser?Email="+$("#Email").val().toString()+"&Password="+$("#Password").val().toString()+"&RememberMe="+$("#RememberMe").prop('checked').toString(),
            contentType: "application/json",
            type: "POST",
            datatype: "json",
            success: function (Result) {
                $(".preloader").fadeOut();
                if(Result == "2" || Result == "3" || Result == "4")
                {
                    if (Result == "2") {
                        swal("Password Incorrect!", "Password You Entered Is Not Correct!", "warning");
                    }
                    else if (Result == "3") {
                        swal("Not Found!", "User Not Found Against Email You Entered!", "warning");
                    }
                    else if (Result == "4") {
                        swal("Not Active!", "User Is Not Active!", "warning");
                    }
                }
                else
                {
                    window.location.href = Result;
                }
            },
            error: function (err) {
                debugger;
                $(".preloader").fadeOut();
                console.log(err);
            },
            complete: function (data) {
                console.log(data);
            }
        });




    });
</script>