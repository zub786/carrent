@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="container-fluid" style="min-height: 530px;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card  bg-light no-card-border">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="m-r-10">
                            <img src="../../assets/images/users/2.jpg" alt="user" width="60" class="rounded-circle">
                        </div>
                        <div>
                            <h3 class="m-b-0">Welcome @Request.Cookies["RememberMeUserInfo"]["UserName"]</h3>
                            <span>@Request.Cookies["RememberMeUserInfo"]["EmailId"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4">
            <div class="card">
                <a href="@Url.Action("Index", "User")">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="m-r-10">
                                <span class="btn btn-circle btn-lg btn-info">
                                    <i class="fa fa-users text-white"></i>
                                </span>
                            </div>
                            <div style="color: #000 !important;">
                                Users

                            </div>
                            <div class="ml-auto">

                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <a href="@Url.Action("VehiclesIndex", "Admin")">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="m-r-10">
                                <span class="btn btn-circle btn-lg btn-info">
                                    <i class="fa fa-car text-white"></i>
                                </span>
                            </div>
                            <div style="color: #000 !important;">
                                Vehicles

                            </div>
                            <div class="ml-auto">

                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <a href="@Url.Action("DriversIndex", "Admin")">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="m-r-10">
                                <span class="btn btn-circle btn-lg btn-info">
                                    <i class="fa fa-users text-white"></i>
                                </span>
                            </div>
                            <div style="color: #000 !important;">
                                Drivers

                            </div>
                            <div class="ml-auto">

                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <a href="@Url.Action("Create", "Booking")">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="m-r-10">
                                <span class="btn btn-circle btn-lg btn-info">
                                    <i class="fa fa-edit text-white"></i>
                                </span>
                            </div>
                            <div style="color: #000 !important;">
                                Bookings

                            </div>
                            <div class="ml-auto">

                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>
</div>